{
  "extends": "../tsconfig.json",
  "include": [
    "./**/*.ts",
    "./**/*.js",           // ← permite arquivos JavaScript
    "../cypress.d.ts"
  ],
  "exclude": [],
  "compilerOptions": {
    "types": ["cypress", "@percy/cypress"],
    "lib": ["es2015", "dom"],
    "isolatedModules": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,              // já estava, deixa             // ← ativa checagem de tipos em .js (autocomplete perfeito)
    "noEmit": true
  }
}